import java.io.BufferedReader;

import java.io.File;

import java.io.FileReader;

import java.io.IOException;


import java.util.*;

import java.io.*;

class Palindrome
{
 
  public static void main(String args[]) throws IOException
 
  {
  
    String orig, opp = "";

	int palindrome=0,notpalindrome=0;

	
  BufferedReader br = new BufferedReader(new FileReader("common1000_words.txt"));

    String line;

    while ((line = br.readLine()) != null) {


        orig = line;

 
      int length = orig.length();

 
      for ( int i = length - 1; i >= 0; i-- )
     
    opp = opp + orig.charAt(i);

 
      if (orig.equals(opp))
	{

	palindrome++;
 
        System.out.println("The string "+orig+" is a palindrome word.");

	}
      
else
	{

         //System.out.println("The string "+orig+" is not a palindrome word.");
	
notpalindrome++;

	}

    }
  
	System.out.println("The count of palindromes inn the list is :"+palindrome);
	
System.out.println("The count of palindromes inn the list is :"+notpalindrome); 
  
 
   }

}
